{
  "manifest_version": 3,
  "name": "JSON Format Tool",
  "version": "1.0",
  "description": "一个优雅的JSON格式化工具，支持格式化、去除转义和压缩功能",
  "permissions": [
    "tabs"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "JSON Format Tool"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}